<Window x:Class="TravisMenu2019.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravisMenu2019"
        mc:Ignorable="d"
        Title="MainWindow" Height="577.5" Width="622.5" SnapsToDevicePixels="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="194*"/>
            <RowDefinition Height="308*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\hp-800_G2-011\Desktop\TJ Projects\TravisMenu2019\TravisMenu2019\Util\LookandFeel\MenuBackground00.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="421*"/>
        </Grid.ColumnDefinitions>
        <Viewbox x:Name="ImageBox" 
                 Grid.Column="2" 
                 HorizontalAlignment="Left" 
                 Height="224" 
                 Margin="10,10,0,0" 
                 VerticalAlignment="Top" 
                 Width="397" 
                 Grid.RowSpan="2">
            <!--Grid x:Name="Photos1" Height="10" -->
            <Image x:Name="I1"/>
            <!--/Grid-->
        </Viewbox>
        <Label x:Name="label" Content="Menu" Grid.Column="1" Margin="9,10,10,0" VerticalAlignment="Top" Grid.IsSharedSizeScope="True" HorizontalContentAlignment="Center" FontFamily="Comic Sans MS" FontWeight="Bold" Foreground="#FFF90606" Height="24">
            <Label.Background>
                <ImageBrush ImageSource="C:\Users\hp-800_G2-011\Desktop\TJ Projects\TravisMenu2019\TravisMenu2019\Util\LookandFeel\3.jpg" Stretch="UniformToFill"/>
            </Label.Background>
        </Label>
        <Rectangle x:Name="quitButton" Height="30" RadiusY="13" RadiusX="14" Stroke="Black" VerticalAlignment="Top" Grid.Column="1" Margin="50,268,50,0" AllowDrop="False" MouseLeftButtonUp="QuitButton_Click" TouchUp ="QuitButton_Click" MouseEnter="Button_Enter" MouseLeave="Button_Leave" TouchEnter="Button_Enter" TouchLeave="Button_Leave" Grid.Row="2">
            <Rectangle.Fill>
                <ImageBrush ImageSource="C:\Users\hp-800_G2-011\Desktop\TJ Projects\TravisMenu2019\TravisMenu2019\Util\LookandFeel\5.jpg" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="Quit" Content="Quit" Grid.Column="1" Margin="82,268,82,0" Height="30" Foreground="Red" FontFamily="Comic Sans MS" VerticalAlignment="Top" Grid.Row="2" IsHitTestVisible="False"/>
        <Rectangle x:Name="B1" Height="30" RadiusY="13" RadiusX="14" Stroke="Black" VerticalAlignment="Top" Grid.Column="1" Margin="50,10,50,0" AllowDrop="False" MouseEnter="Button_Enter" MouseLeave="Button_Leave" TouchEnter="Button_Enter" TouchLeave="Button_Leave" MouseLeftButtonUp="CatButton_Click" TouchUp="CatButton_Click" Grid.Row="1">
            <Rectangle.Fill>
                <ImageBrush Stretch="UniformToFill" ImageSource="C:\Users\hp-800_G2-011\Desktop\TJ Projects\TravisMenu2019\TravisMenu2019\Util\LookandFeel\4.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="B2" Height="30" RadiusY="13" RadiusX="14" Stroke="Black" VerticalAlignment="Top" Grid.Column="1" Margin="50,60,50,0" AllowDrop="False" MouseEnter="Button_Enter" MouseLeave="Button_Leave" TouchEnter="Button_Enter" TouchLeave="Button_Leave" MouseLeftButtonUp="DogButton_Click" TouchUp="DogButton_Click" Grid.Row="1">
            <Rectangle.Fill>
                <ImageBrush ImageSource="C:\Users\hp-800_G2-011\Desktop\TJ Projects\TravisMenu2019\TravisMenu2019\Util\LookandFeel\4.jpg" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="Option1" Content="Cats" HorizontalAlignment="Left" Foreground="Red" VerticalAlignment="Top" Width="36" Grid.Column="1" Margin="82,10,0,0" Grid.Row="1" FontFamily="Comic Sans MS" Height="27" IsHitTestVisible="False"/>
        <Label x:Name="Option2" Content="Dogs" HorizontalAlignment="Left" Foreground="Red" VerticalAlignment="Top" Width="36" Grid.Column="1" Margin="82,60,0,0" Grid.Row="1" FontFamily="Comic Sans MS" Height="27" IsHitTestVisible="False"/>
        <ListView x:Name="Thumbnails" Grid.Column="2" Background="Transparent" HorizontalAlignment="Left" Height="288" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="393">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" Height="100" Width="100" Margin="5" MouseLeftButtonUp="Image_Click" TouchUp="Image_Click"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
